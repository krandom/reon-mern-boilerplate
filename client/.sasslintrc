{
  "files": {
    "include": "src/**/*.s+(a|c)ss",
    "ignore": [
      "src/css/vendor/**/*.*",
      "src/css/utils/_normalizer.scss",
      "node_modules/**/*.*"
    ]
  },
  "rules": {
    "property-sort-order": 0,
    "indentation": [
      1,
      {
        "size": "tab"
      }
    ],
    "class-name-format": 0,
    "no-color-literals": 0,
    "no-important": 0,
    "no-vendor-prefixes": 0,
    "no-url-domains": 0,
    "no-url-protocols": 0,
  }
}